# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# URL de conexión a PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/nombre_base_datos
DATABASE_URL="postgresql://sistemnotas_user:tu_password_seguro@localhost:5432/sistemnotas"

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Clave secreta para JWT (DEBE ser larga y segura)
# Generar con: openssl rand -base64 32
JWT_SECRET="tu_jwt_secret_super_seguro_y_largo_minimo_32_caracteres"

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Puerto del servidor backend
PORT=3001

# Entorno de ejecución
NODE_ENV="development"

# URL del frontend (para CORS)
FRONTEND_URL="http://localhost:3000"

# ===========================================
# CONFIGURACIÓN ADICIONAL
# ===========================================

# Configuración de cookies (opcional)
COOKIE_DOMAIN="localhost"
COOKIE_SECURE="false"

# Configuración de logs (opcional)
LOG_LEVEL="debug"
