@startuml Casos de Uso - Sistema de Registro de Notas

skinparam {
    ActorBackgroundColor #E3F2FD
    ActorBorderColor #1976D2
    ActorFontSize 11
    
    UsecaseBackgroundColor #FFFFFF
    UsecaseBorderColor #424242
    UsecaseFontSize 10
    
    ArrowColor #424242
    ArrowThickness 1.5
    
    Shadowing false
    RoundCorner 8
}

title **CASOS DE USO - CORAZÓN DEL SISTEMA**\n//Profesor & Sistema IA//

left to right direction
skinparam linetype ortho

actor "Profesor" as profesor
actor "Sistema IA" as sistemaIA

rectangle "Sistema de Registro de Notas" {
    together {
        usecase "Iniciar\nSesión" as UC10
        usecase "Gestionar Hoja\nde Trabajo" as UC20
        usecase "Generar\nReportes" as UC30
        usecase "Cerrar\nSesión" as UC40
    }

    together {
        usecase "Validar\nCredenciales" as UC11 <<include>>
        usecase "Abrir Hoja\nde Trabajo" as UC21 <<include>>
        usecase "Registrar\nNota" as UC22 <<include>>
        usecase "Actualizar\nNota" as UC23 <<include>>
        usecase "Revisar Hojas\nAnteriores" as UC24 <<include>>
    }

    together {
        usecase "Filtrar\nAlumnos" as EX21 <<extend>>
        usecase "Solicitar\nEstimación IA" as EX22 <<extend>>
        usecase "Descargar Hoja\nExcel" as EX31 <<extend>>
        usecase "Descargar Informe\nPDF" as EX32 <<extend>>
    }
}

' Mantener flujo horizontal visual
UC10 -[hidden]-> UC20
UC20 -[hidden]-> UC30
UC30 -[hidden]-> UC40

' RELACIONES ACTOR->CASO
profesor --> UC10
profesor --> UC20
profesor --> UC30
profesor --> UC40

sistemaIA --> EX22

' RELACIONES INCLUDE & EXTEND
UC10 .> UC11 : <<include>>
UC20 .> UC21 : <<include>>
UC20 .> UC22 : <<include>>
UC20 .> UC23 : <<include>>
UC20 .> UC24 : <<include>>
UC30 .> UC20 : <<include>>
UC40 .> UC10 : <<include>>

EX21 .> UC20 : <<extend>>
EX22 .> UC22 : <<extend>>
EX22 .> UC23 : <<extend>>
EX31 .> UC30 : <<extend>>
EX32 .> UC30 : <<extend>>


@enduml
